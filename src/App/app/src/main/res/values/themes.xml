<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WakeupBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar"> //changed dark action to no action
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item> //modified
        <item name="colorPrimaryVariant">@color/primary_color</item> //modified
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ButtonWhite">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonBlack">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="Title">
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="SubTitle">
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey</item>
        <item name="hintTextColor">@color/light_grey</item>
        <item name="startIconTint">@color/primary_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        
    </style>
    
    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:fontFamily">@font/robotoregular</item>

    </style>

    <style name="nextButton" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textColor">@color/black</item>
      
    </style>

    <style name="buttonHomeAppliances" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/button_home_appliances</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:imageButtonStyle">@drawable/img_2</item>

    </style>

</resources>